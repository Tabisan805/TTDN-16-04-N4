            <field name="sequence">30</field>
            <field name="color">2</field>
            <field name="icon">fa-calculator</field>
        </record>
        
        <!-- Loại công việc: Nhân sự -->
        <record id="task_type_hr" model="task.type.btl">
            <field name="name">Nhân sự</field>
            <field name="code">hr</field>
            <field name="description">Tuyển dụng, đánh giá, đào tạo nhân sự</field>
            <field name="sequence">40</field>
            <field name="color">8</field>
            <field name="icon">fa-users</field>
        </record>
        
        <!-- Loại công việc: Trợ lý -->
        <record id="task_type_assistant" model="task.type.btl">
            <field name="name">Trợ lý</field>
            <field name="code">assistant</field>
            <field name="description">Sắp xếp lịch, hỗ trợ hành chính, văn phòng</field>
            <field name="sequence">50</field>
            <field name="color">1</field>
            <field name="icon">fa-briefcase</field>
        </record>
        
    </data>
