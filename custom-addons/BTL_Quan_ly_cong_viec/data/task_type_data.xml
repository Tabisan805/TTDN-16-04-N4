<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Loại công việc: Sale -->
        <record id="task_type_sale" model="task.type.btl">
            <field name="name">Bán hàng</field>
            <field name="code">sale</field>
            <field name="description">Công việc liên quan đến bán hàng, chăm sóc khách hàng, follow-up</field>
            <field name="sequence">10</field>
            <field name="color">3</field>
            <field name="icon">fa-shopping-cart</field>
        </record>
        
        <!-- Loại công việc: Marketing -->
        <record id="task_type_marketing" model="task.type.btl">
            <field name="name">Marketing</field>
            <field name="code">marketing</field>
            <field name="description">Chiến dịch marketing, content, quảng cáo</field>
            <field name="sequence">20</field>
            <field name="color">5</field>
            <field name="icon">fa-bullhorn</field>
        </record>
        
        <!-- Loại công việc: Kế toán -->
        <record id="task_type_accounting" model="task.type.btl">
            <field name="name">Kế toán</field>
            <field name="code">accounting</field>
