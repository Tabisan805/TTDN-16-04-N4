<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- ==================== GROUPS ==================== -->
        
        <record id="group_task_user" model="res.groups">
            <field name="name">BTL Task: Nhân viên</field>
            <field name="comment">Nhân viên có thể xem và cập nhật công việc của mình</field>
        </record>
        
        <record id="group_task_leader" model="res.groups">
            <field name="name">BTL Task: Trưởng nhóm</field>
            <field name="implied_ids" eval="[(4, ref('group_task_user'))]"/>
            <field name="comment">Trưởng nhóm có thể giao việc và theo dõi công việc của team</field>
        </record>
        
        <record id="group_task_manager" model="res.groups">
            <field name="name">BTL Task: Quản lý</field>
            <field name="implied_ids" eval="[(4, ref('group_task_leader'))]"/>
            <field name="comment">Quản lý có toàn quyền quản lý công việc</field>
        </record>
        
        <!-- ==================== RECORD RULES ==================== -->
        
        <!-- Project Task Rules -->
        <record id="task_rule_user" model="ir.rule">
            <field name="name">BTL Task: Nhân viên xem công việc của mình</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[
                '|', '|', '|',
                ('user_ids', 'in', [user.id]),
                ('assigned_by_id', '=', user.id),
                ('collaborator_ids', 'in', [user.id]),
                ('create_uid', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_task_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="task_rule_leader" model="ir.rule">
            <field name="name">BTL Task: Trưởng nhóm xem công việc phòng ban</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[('department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_task_leader'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="task_rule_manager" model="ir.rule">
            <field name="name">BTL Task: Quản lý xem tất cả</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_task_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>
