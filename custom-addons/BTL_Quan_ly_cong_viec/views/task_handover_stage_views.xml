<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Task Handover Stage List View -->
        <record id="task_handover_stage_list" model="ir.ui.view">
            <field name="name">Task Handover Stage List</field>
            <field name="model">task.handover.stage</field>
            <field name="arch" type="xml">
                <list string="Handover Stages">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="active" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Task Handover Stage Form View -->
        <record id="task_handover_stage_form" model="ir.ui.view">
            <field name="name">Task Handover Stage Form</field>
            <field name="model">task.handover.stage</field>
            <field name="arch" type="xml">
                <form string="Handover Stage">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="sequence"/>
                            <field name="color"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" widget="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Task Handover Stage Action -->
        <record id="action_task_handover_stage" model="ir.actions.act_window">
            <field name="name">Handover Stages</field>
            <field name="res_model">task.handover.stage</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="task_handover_stage_list"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new handover stage
                </p>
            </field>
        </record>

        <!-- Task Handover Stage Menu Item -->
        <menuitem 
            id="menu_task_handover_stage"
            parent="menu_btl_task_config"
            action="action_task_handover_stage"
            sequence="20"/>

    </data>
</odoo>
