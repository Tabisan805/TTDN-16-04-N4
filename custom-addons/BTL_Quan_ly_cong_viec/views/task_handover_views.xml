<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ==================== TASK HANDOVER VIEWS ==================== -->
    
    <!-- List View -->
    <record id="task_handover_btl_list_view" model="ir.ui.view">
        <field name="name">task.handover.btl.list</field>
        <field name="model">task.handover.btl</field>
        <field name="arch" type="xml">
            <list>
                <field name="handover_date"/>
                <field name="task_id"/>
                <field name="from_user_id"/>
                <field name="to_user_id"/>
                <field name="reason"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="task_handover_btl_form_view" model="ir.ui.view">
        <field name="name">task.handover.btl.form</field>
        <field name="model">task.handover.btl</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_reject" string="Từ chối" type="object" 
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="task_id"/>
                            <field name="from_user_id"/>
                            <field name="to_user_id"/>
                        </group>
                        <group>
                            <field name="handover_date"/>
                            <field name="task_status_at_handover"/>
                            <field name="completion_at_handover"/>
                        </group>
                    </group>
                    <group string="Lý do bàn giao">
                        <field name="reason" nolabel="1"/>
                    </group>
                    <group string="Ghi chú">
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="task_handover_btl_action" model="ir.actions.act_window">
        <field name="name">Bàn giao công việc</field>
        <field name="res_model">task.handover.btl</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>
