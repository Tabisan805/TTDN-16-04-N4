<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_hr_attendance_btl_tree" model="ir.ui.view">
        <field name="name">hr.attendance.btl.tree</field>
        <field name="model">hr.attendance.btl</field>
        <field name="arch" type="xml">
            <list string="Chấm công" decoration-danger="is_late or is_early_leave">
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours"/>
                <field name="is_late"/>
                <field name="late_minutes" optional="hide"/>
                <field name="is_early_leave"/>
                <field name="early_minutes" optional="hide"/>
                <field name="work_days"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_hr_attendance_btl_form" model="ir.ui.view">
        <field name="name">hr.attendance.btl.form</field>
        <field name="model">hr.attendance.btl</field>
        <field name="arch" type="xml">
            <form string="Chấm công">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_validate" string="Duyệt" type="object" 
                            invisible="state != 'confirmed'" class="btn-primary"/>
                    <button name="action_draft" string="Về nháp" type="object" 
                            invisible="state not in ('confirmed', 'validated')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,validated"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="date"/>
                            <field name="rule_id"/>
                        </group>
                        <group>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="worked_hours"/>
                            <field name="work_days"/>
                        </group>
                    </group>
                    <group>
                        <group string="Đi trễ">
                            <field name="is_late"/>
                            <field name="late_minutes"/>
                        </group>
                        <group string="Về sớm">
                            <field name="is_early_leave"/>
                            <field name="early_minutes"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hr_attendance_btl" model="ir.actions.act_window">
        <field name="name">Chấm công</field>
        <field name="res_model">hr.attendance.btl</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_month': 1}</field>
    </record>
    
</odoo>
