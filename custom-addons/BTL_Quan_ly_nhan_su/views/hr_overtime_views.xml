<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_overtime_tree" model="ir.ui.view">
        <field name="name">hr.overtime.tree</field>
        <field name="model">hr.overtime</field>
        <field name="arch" type="xml">
            <list string="Tăng ca">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="time_from" widget="float_time"/>
                <field name="time_to" widget="float_time"/>
                <field name="hours"/>
                <field name="overtime_type"/>
                <field name="rate"/>
                <field name="overtime_pay"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_overtime_form" model="ir.ui.view">
        <field name="name">hr.overtime.form</field>
        <field name="model">hr.overtime</field>
        <field name="arch" type="xml">
            <form string="Tăng ca">
                <header>
                    <button name="action_submit" string="Gửi duyệt" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" string="Duyệt" type="object" invisible="state != 'submitted'" class="btn-success"/>
                    <button name="action_refuse" string="Từ chối" type="object" invisible="state != 'submitted'" class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="time_from" widget="float_time"/>
                            <field name="time_to" widget="float_time"/>
                            <field name="hours"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="overtime_type"/>
                            <field name="rate"/>
                            <field name="overtime_pay"/>
                        </group>
                        <group>
                            <field name="approved_by"/>
                            <field name="approved_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hr_overtime" model="ir.actions.act_window">
        <field name="name">Tăng ca</field>
        <field name="res_model">hr.overtime</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
