<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_leave_btl_tree" model="ir.ui.view">
        <field name="name">hr.leave.btl.tree</field>
        <field name="model">hr.leave.btl</field>
        <field name="arch" type="xml">
            <list string="Nghỉ phép">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="number_of_days"/>
                <field name="leave_type"/>
                <field name="is_approved"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_leave_btl_form" model="ir.ui.view">
        <field name="name">hr.leave.btl.form</field>
        <field name="model">hr.leave.btl</field>
        <field name="arch" type="xml">
            <form string="Nghỉ phép">
                <header>
                    <button name="action_submit" string="Gửi duyệt" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" string="Duyệt" type="object" invisible="state != 'submitted'" class="btn-success"/>
                    <button name="action_refuse" string="Từ chối" type="object" invisible="state != 'submitted'" class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="number_of_days"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="leave_type"/>
                            <field name="is_approved"/>
                            <field name="is_paid"/>
                        </group>
                        <group>
                            <field name="approved_by"/>
                            <field name="approved_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                        <field name="note"/>
                        <field name="refused_reason" invisible="state != 'refused'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hr_leave_btl" model="ir.actions.act_window">
        <field name="name">Nghỉ phép</field>
        <field name="res_model">hr.leave.btl</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
