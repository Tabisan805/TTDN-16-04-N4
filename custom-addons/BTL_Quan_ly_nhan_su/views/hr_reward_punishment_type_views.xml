<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_reward_punishment_type_tree" model="ir.ui.view">
        <field name="name">hr.reward.punishment.type.tree</field>
        <field name="model">hr.reward.punishment.type</field>
        <field name="arch" type="xml">
            <list string="Loại thưởng phạt">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="amount_type"/>
                <field name="default_amount"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_reward_punishment_type_form" model="ir.ui.view">
        <field name="name">hr.reward.punishment.type.form</field>
        <field name="model">hr.reward.punishment.type</field>
        <field name="arch" type="xml">
            <form string="Loại thưởng phạt">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="amount_type"/>
                            <field name="default_amount"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hr_reward_punishment_type" model="ir.actions.act_window">
        <field name="name">Loại thưởng phạt</field>
        <field name="res_model">hr.reward.punishment.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
