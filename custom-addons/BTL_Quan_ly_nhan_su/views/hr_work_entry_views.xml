<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_work_entry_btl_tree" model="ir.ui.view">
        <field name="name">hr.work.entry.btl.tree</field>
        <field name="model">hr.work.entry.btl</field>
        <field name="arch" type="xml">
            <list string="Bảng công">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date"/>
                <field name="total_work_days"/>
                <field name="total_overtime"/>
                <field name="total_late_times"/>
                <field name="total_early_times"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_work_entry_btl_form" model="ir.ui.view">
        <field name="name">hr.work.entry.btl.form</field>
        <field name="model">hr.work.entry.btl</field>
        <field name="arch" type="xml">
            <form string="Bảng công">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_lock" string="Khóa" type="object" invisible="state != 'confirmed'" class="btn-success"/>
                    <button name="action_unlock" string="Mở khóa" type="object" invisible="state != 'locked'" class="btn-warning"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,locked"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <group string="Ngày công">
                            <field name="total_work_days"/>
                            <field name="standard_work_days"/>
                            <field name="total_worked_hours"/>
                        </group>
                        <group string="Tăng ca &amp; Vi phạm">
                            <field name="total_overtime"/>
                            <field name="total_late_times"/>
                            <field name="total_early_times"/>
                        </group>
                    </group>
                    <group>
                        <group string="Nghỉ phép">
                            <field name="total_leave_days"/>
                            <field name="total_unpaid_leave_days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết chấm công">
                            <field name="attendance_ids" context="{'default_employee_id': employee_id}"/>
                        </page>
                        <page string="Chi tiết nghỉ phép">
                            <field name="leave_ids" context="{'default_employee_id': employee_id}"/>
                        </page>
                        <page string="Chi tiết tăng ca">
                            <field name="overtime_ids" context="{'default_employee_id': employee_id}"/>
                        </page>
                    </notebook>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hr_work_entry_btl" model="ir.actions.act_window">
        <field name="name">Bảng công</field>
        <field name="res_model">hr.work.entry.btl</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
