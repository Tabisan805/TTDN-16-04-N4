<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_hr_payslip_btl_tree" model="ir.ui.view">
        <field name="name">hr.payslip.btl.tree</field>
        <field name="model">hr.payslip.btl</field>
        <field name="arch" type="xml">
            <list string="Bảng lương">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date"/>
                <field name="work_days"/>
                <field name="base_salary"/>
                <field name="total_bonus"/>
                <field name="total_punishment"/>
                <field name="net_salary"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_hr_payslip_btl_form" model="ir.ui.view">
        <field name="name">hr.payslip.btl.form</field>
        <field name="model">hr.payslip.btl</field>
        <field name="arch" type="xml">
            <form string="Bảng lương">
                <header>
                    <button name="action_compute_sheet" string="Tính lương" type="object" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_confirm" string="Xác nhận" type="object" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_paid" string="Đã thanh toán" type="object" 
                            invisible="state != 'confirmed'" class="btn-success"/>
                    <button name="action_draft" string="Về nháp" type="object" 
                            invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="wage_type"/>
                            <field name="basic_wage"/>
                            <field name="work_days"/>
                            <field name="standard_work_days"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lương cơ bản">
                            <group>
                                <group>
                                    <field name="base_salary" widget="monetary"/>
                                    <field name="overtime_hours"/>
                                    <field name="overtime_amount" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Thưởng">
                            <group>
                                <group string="Thưởng KPI &amp; Hoa hồng">
                                    <field name="kpi_achievement"/>
                                    <field name="kpi_bonus" widget="monetary"/>
                                    <field name="commission_rate" readonly="1"/>
                                    <field name="commission_amount" widget="monetary"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="attendance_bonus" widget="monetary"/>
                                    <field name="other_bonus" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="total_bonus" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Phạt">
                            <group>
                                <group>
                                    <field name="late_punishment" widget="monetary"/>
                                    <field name="other_punishment" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="total_punishment" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Khấu trừ">
                            <group>
                                <group>
                                    <field name="insurance_amount" widget="monetary"/>
                                    <field name="tax_amount" widget="monetary"/>
                                    <field name="other_deduction" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="total_deduction" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Chi tiết thưởng phạt">
                            <field name="reward_punishment_ids">
                                <list>
                                    <field name="date"/>
                                    <field name="type_id"/>
                                    <field name="type"/>
                                    <field name="amount"/>
                                    <field name="reason"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="gross_salary" widget="monetary" class="oe_subtotal_footer_separator"/>
                        <field name="total_deduction" widget="monetary"/>
                        <field name="net_salary" widget="monetary" class="oe_subtotal_footer_separator"/>
                    </group>
                    <group>
                        <field name="work_entry_id"/>
                        <field name="payment_date"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hr_payslip_btl" model="ir.actions.act_window">
        <field name="name">Bảng lương</field>
        <field name="res_model">hr.payslip.btl</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_month': 1}</field>
    </record>
    
</odoo>
