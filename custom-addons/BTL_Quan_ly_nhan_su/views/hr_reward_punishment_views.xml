<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_reward_punishment_tree" model="ir.ui.view">
        <field name="name">hr.reward.punishment.tree</field>
        <field name="model">hr.reward.punishment</field>
        <field name="arch" type="xml">
            <list string="Thưởng - Phạt" decoration-success="type=='reward'" decoration-danger="type=='punishment'">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="type_id"/>
                <field name="type"/>
                <field name="amount"/>
                <field name="reason"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_reward_punishment_form" model="ir.ui.view">
        <field name="name">hr.reward.punishment.form</field>
        <field name="model">hr.reward.punishment</field>
        <field name="arch" type="xml">
            <form string="Thưởng - Phạt">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,applied"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="type_id"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="period"/>
                            <field name="amount"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason"/>
                        <field name="note"/>
                    </group>
                    <group>
                        <group>
                            <field name="created_by"/>
                            <field name="approved_by"/>
                        </group>
                        <group>
                            <field name="approved_date"/>
                            <field name="payslip_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hr_reward_punishment" model="ir.actions.act_window">
        <field name="name">Thưởng - Phạt</field>
        <field name="res_model">hr.reward.punishment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
