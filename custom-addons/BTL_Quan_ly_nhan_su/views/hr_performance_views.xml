<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_performance_tree" model="ir.ui.view">
        <field name="name">hr.performance.tree</field>
        <field name="model">hr.performance</field>
        <field name="arch" type="xml">
            <list string="Hiệu suất">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date"/>
                <field name="kpi_achievement"/>
                <field name="kpi_status"/>
                <field name="sales_amount"/>
                <field name="win_rate"/>
                <field name="overall_rating"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_hr_performance_form" model="ir.ui.view">
        <field name="name">hr.performance.form</field>
        <field name="model">hr.performance</field>
        <field name="arch" type="xml">
            <form string="Hiệu suất">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <group string="KPI">
                            <field name="kpi_target"/>
                            <field name="kpi_achievement"/>
                            <field name="kpi_status"/>
                        </group>
                        <group string="Doanh số">
                            <field name="sales_target"/>
                            <field name="sales_amount"/>
                            <field name="sales_achievement"/>
                        </group>
                    </group>
                    <group>
                        <group string="Hoạt động">
                            <field name="total_activities"/>
                            <field name="total_calls"/>
                            <field name="total_meetings"/>
                        </group>
                        <group string="Khách hàng &amp; Cơ hội">
                            <field name="total_customers"/>
                            <field name="new_customers"/>
                            <field name="total_leads"/>
                            <field name="won_leads"/>
                            <field name="win_rate"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="overall_rating" widget="priority"/>
                        </group>
                    </group>
                    <group>
                        <field name="strength"/>
                        <field name="weakness"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_hr_performance" model="ir.actions.act_window">
        <field name="name">Hiệu suất</field>
        <field name="res_model">hr.performance</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
